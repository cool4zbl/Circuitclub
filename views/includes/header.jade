//- header.jade

nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse(role='navigation')
	div.container-fluid
		//- Brand and toggle get grouped for better mobile display
		div.navbar-header
			button.navbar-toggle.collapsed.btn.btn-primary.btn-lg(type='button' 
				data-toggle='collapse' 
				data-target='#navbar-layout')
				span.glyphicon.glyphicon-align-justify
				//- span.sr-only Toggle navigation
				//- span.icon-bar
				//- span.icon-bar
				//- span.icon-bar
			a.navbar-brand(href='/') 电分在线考试系统

			//- Collect the nav links, forms, and other content for toggling
		div.collapse.navbar-collapse#navbar-layout
			ul.nav.navbar-nav
				li.active
					a(href='/') 首页
					- if (!user)
							li
								a(href='#', data-toggle='modal', data-target='#loginModal') 登录
							li
								a(href='/reg') 注册
					- else
							li
								a(href='/logout') 退出

	#loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal')
						span(aria-hidden='true') &times;
						span.sr-only Close
					|         
					h4#myModalLabel.modal-title 用户登录
				|       
				.modal-body
					form.form-horizontal(method='post', action='/login')
						filedset
							.control-group
								label.control-label.col-sm-4(for='username') 用户名
								.col-sm-8
									input.form-control#username(type='text' name='username' placeholder='请输入您的学号' )
							
							.control-group
								label.control-label.col-sm-4(for='password') 密码
								.col-sm-8
									input.form-control#password(type='password' name='password' placeholder='请输入您的密码')
						.modal-footer
							button.btn.btn-primary(type='button', onclick="javascript:$('.form-horizontal').submit()") 登录
							|         
							button.btn.btn-default(type='button', data-dismiss='modal') 取消
