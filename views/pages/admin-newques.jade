//- admin.jade 后台习题录入页
extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/admin/question/new", style="font-size: 1.2em;")
				input(type="hidden", name="question[_id]", value="#{question._id}")
				.form-group
					label.col-sm-2.control-label(for="inputOrder") 题目编号
					.col-sm-10
						input#inputOrder.form-control(type="text", name="question[order]",
							value="#{question.order}")
				.form-group
					label.col-sm-2.control-label(for="inputType") 类型
					.col-sm-10
						//- select#inputType.form-control(name="question[type]")
						//- 	option 选择题
						//- 	option 填空题
						//- 	option 计算题
						label.radio-inline
							input(type="radio", name="question[type]", id="multiple-choice" value="选择题") 
							选择题
						label.radio-inline
							input(type="radio", name="question[type]", id="fill-in" value="填空题") 
							填空题
						label.radio-inline 
							input(type="radio", name="question[type]", id="calculate" value="计算题")
							计算题
				.form-group
					label.col-sm-2.control-label(for="inputChapter") 章节
					.col-sm-10
						input#inputChapter.form-control(type="text", name="question[chapter]",
							value="#{question.chapter}")
				.form-group
					label.col-sm-2.control-label(for="inputDegree") 难度系数
					.col-sm-10
						input#inputDegree.form-control(type="text", name="question[degree]",
							value="#{question.degree}")
				.form-group
					label.col-sm-2.control-label(for="inputContent") 题目内容
					.col-sm-10
						input#inputContent.form-control(type="text", name="question[content]",
							value="#{question.content}")
				.form-group
					label.col-sm-2.control-label(for="inputPic") 题目图片					
					.col-sm-10
						.upload-control.input-group.input-group-sm
							.input-group-btn
							span.btn.btn-default.btn-sm 选择文件
								input.form-control(id=id type="file" name=name data-url=url multiple=(multi ? true : false))
							//- span.upload_info.form-control 未选择文件
				.form-group
					label.col-sm-2.control-label(for="inputAnswer") 答案
					.col-sm-10
						input#inputAnswer.form-control(type="text", name="question[answer]",
							value="#{question.answer}")
				.form-group
					.col-sm-6
					button.btn.btn-success(type="submit") 录入
