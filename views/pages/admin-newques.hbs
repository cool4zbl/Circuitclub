{{!-- admin-newques.hbs --}}
{{!< ../layout}}
<style>
.form-group .col-sm-2, .col-sm-10, .col-sm-12 {
  margin-bottom: 20px;
}
</style>
<div class="container">
  <div class="row">    
     <form action="/admin/question/new", method="post",class="form-horizontal", style="font-size:1.2em;">
       {{#if question._id}}
         <input type="hidden",name="question[_id]",value="{{question._id}}">
       {{/if}}

       <div class="form-group ">
         <label for="inputOrder" class="col-sm-2 control-label">题目编号</label>
         <div class="col-sm-10">
          <input id="inputOrder" class="form-control" type="text" placeholder="{{question.order}}" name="question[order]"
          value={{question.order}}>
         </div>
       </div>

         <div class="form-group ">
         <label for="inputType" class="col-md-2 control-label">题目类型</label>
         <div class="col-md-12">
            <label class="radio-inline control-label">
            <input type="radio" name="question[type]" id="multiple-choice" value="multiple-choice"/>选择题
            </label>
            <label class="radio-inline">
            <input type="radio" name="question[type]" id="fill-in" value="fill-in"/>填空题
            </label>
            <label class="radio-inline">
            <input type="radio" name="question[type]" id="calculate" value="calculate"/>计算题
            </label>
         </div>
       </div>
       <div class="form-group ">
         <label for="inputChapter" class="col-sm-2 control-label">章节</label>
         <div class="col-sm-10">
          <input id="inputChapter" class="form-control" type="text"name="question[chapter]" placeholder="{{question.chapter}}" value={{question.chapter}}>
         </div>
       </div>

       <div class="form-group ">
         <label for="inputDegree" class="col-sm-2 control-label">难度系数</label>
         <div class="col-sm-10">
          <input  id="inputDegree"  type="text"  class="form-control" name="question[degree]" placeholder="{{question.degree}}" value={{question.degree}}>
         </div>
       </div>
     {{!--   <div class="form-group ">
         <label for="inputContent" class="col-sm-2 control-label">题目内容</label>
         <div class="col-sm-10">
          <input id="inputContent" class="form-control" type="text" name="question[content]" placeholder="{{question.content}}" value={{question.content}} >
         </div>
       </div> --}}
        <div class="form-group ">
         <label for="inputContent" class="col-sm-2 control-label">题目内容</label>
         <div class="col-sm-10">
          <textarea type="text" class="form-control" name="question[content]" id="inputContent" cols="30" rows="10">{{question.content}} </textarea>
         </div>
       </div>

       <div class="form-group ">
        <label for="inputPic" class="col-sm-2 control-label">题目图片 </label>
        <div class="col-sm-10">
          <div class="upload-control input-group input-group-sm">
            <div class="input-group-btn"></div>
              <span class="btn btn-default btn-sm">选择文件
              <input id="inputPic" type="file" class="form-control"/></span>
          </div>
        </div>
       </div>
       <div class="form-group ">
         <label for="inputAnswer" class="col-sm-2 control-label">答案</label>
         <div class="col-sm-10">
          <input id="inputAnswer" class="form-control" type="text" name="question[answer]" placeholder="{{question.answer}}" value={{question.answer}} >
          </div>
       </div>
       <div class="form-group">
        <div class="col-sm-6">
          <button class="btn btn-success" type="submit">录入</button>
        </div>
       </div>
       {{!-- {{debug question}} --}}
     </form>
  </div>
</div> 
