//- login.jade

extends ../layout

block content
	.container
		h2.page-header 用户登录
		form.form-horizontal(method='post')
			filedset
				.form-group
					label.control-label.col-sm-4.col-md-3(for='username') 用户名
					.col-sm-5
						input.form-control#username(type='text' name='username' placeholder='请输入您的学号')
				.form-group
					label.control-label.col-sm-4.col-md-3(for='password') 密码
					.col-sm-5
						input.form-control#password(type='password' name='password' placeholder='请输入您的密码')
				.form-group
					.col-sm-offset-2.col-sm-10
						button.btn.btn-primary(type='submit') 登录