{{!-- quespreview.hbs --}}
{{!-- 题目录入预览页 --}}
{{!< ../layout}}
<style>
  .dl-horizontal {
    font-size: 1.4em;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <dl class="dl-horizontal">
        <dt>题目编号</dt>
        <dd>{{question.order}}</dd>
        <dt>题目类型</dt>
        <dd>{{question.type}}</dd>
        <dt>题目章节</dt>
        <dd>{{question.chapter}}</dd>
        <dt>难度系数</dt>
        <dd>{{question.degree}}</dd>
        <dt>题目内容</dt>
        <dd>{{question.content}}</dd>
        <dt>题目答案</dt>
        <dd>{{question.answer}}</dd>
      </dl>
    </div>
  </div>
</div>