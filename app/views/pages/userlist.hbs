{{!< ../layout}}

<style>
  .heading {
    margin-bottom: 30px;
  }
  .container {
    font-size: 1.1em;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-5">
      <h2 class="heading">注册学生列表</h2>
    </div>
    
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>学生用户名</th>
{{!--           <th>章节</th>
          <th>类型</th>
          <th>题目内容</th>
 --}}          {{!-- <th>保存时间</th> --}}
          <th>详细</th>          
          <th>编辑</th>
          <th>删除</th>
        </tr>
      </thead>
      <tbody>

        {{#each users}}
        <tr class="user-id-{{_id}}">
          <td>{{this.username}}</td>
{{!--           <td>{{this.chapter}}</td>
          <td>{{this.type}}</td>
          <td>{{this.title}}</td> --}}
          {{!-- <td>{{moment(this.meta.updateAt).format('MM/DD/YYYY')}}</td> --}}
          <td><a href="/admin/question/preview/{{_id}}"><button class="btn btn-primary">查看</button></a> </td>
          <td><a href="/admin/question/edit/{{_id}}"><button class="btn btn-info">编辑</button></a> </td>
          <td><button class="btn btn-danger del" data-id="{{_id}}">删除</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    
  </div>
</div>
<script src="/js/admin.js"></script>