{{!-- quespreview.hbs --}}
{{!-- 题目录入预览页 --}}
{{!< ../layout}}
<style>
  .dl-horizontal {
    font-size: 1.2em;
  }
  dd {
    margin-bottom: 20px;
    border-bottom: 2px solid rgba(233, 233, 232, 0.5);
  }
</style>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <dl class="dl-horizontal">
        <dt>编号</dt>
        <dd>{{problem.index}}</dd>
        <dt>题型</dt>
        <dd>{{problem.type}}</dd>
        <dt>章节</dt>
        <dd>{{problem.chapter}}</dd>
        <dt class="difficulty" id="{{problem.difficulty}}">难易</dt>
        <dd class="difficulty"> </dd>
        <dt>题干</dt>
        <dd>{{problem.title}}</dd>
        {{#if problem.a}}
        <dt>选项</dt>
        <dd>A. {{problem.a}}</dd>
        <dd>B. {{problem.b}}</dd>
        <dd>C. {{problem.c}}</dd>
        <dd>D. {{problem.d}}</dd>
        {{/if}}
        {{#if problem.image.path}}
        <dt>题图</dt>
        <dd>
          <img src="{{problem.image.path}}" alt="图呢？">
        </dd>
        {{/if}}
        <dt>答案</dt>
        <dd>{{problem.answer}}</dd>
        <dt>解析</dt>
        <dd>{{problem.analysis}}</dd>
      </dl>
    </div>

  </div>

  <div class="row">
    <div class="col-md-12" style="text-align: center">
    <a href="/admin/problem/edit/{{problem._id}}"> <button class="btn btn-primary">修 改</button></a>
    &nbsp;&nbsp;
    <a href="/admin/problem/new"> <button class="btn btn-success">继续添加</button></a>
    &nbsp;&nbsp;
    <a href="/admin/problemBank/list"> <button class="btn btn-info">习题列表</button></a>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {

    var $ddText = $('dd.difficulty');
    var diff = $('dt.difficulty')[0].id;
    console.log(diff)
    switch(diff) {
      case '2':
        $ddText.html('容易');
        break;
      case '5':
        $ddText.html('中等');
        break;
      case 8:
        $ddText.html('困难');
        break;
    }
  });
</script>
